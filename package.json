{
  "name": "@joaomelo/bus",
  "version": "1.1.1",
  "description": "super simple central event bus for js apps",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .js src",
    "test": "npm run lint && jest",
    "build": "rimraf dist/* && webpack --config webpack.config.js",
    "commit": "git add -A && git commit",
    "push": "git push && git push --tags",
    "pack": "npm run lint && npm test && npm run build && npm run commit",
    "bump:patch": "npm version patch && npm run push",
    "bump:minor": "npm version minor && npm run push",
    "release:patch": "npm run pack && npm run bump:patch && npm publish",
    "release:minor": "npm run pack && npm run bump:minor && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaomelo/bus.git"
  },
  "keywords": [
    "central",
    "event",
    "bus"
  ],
  "author": "joaomelo",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joaomelo/bus/issues"
  },
  "homepage": "https://github.com/joaomelo/bus#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
